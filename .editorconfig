# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
indent_style = tab
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,ts,json,py,c,cpp}]
indent_size = 4

[*.{yml,yaml}]
indent_style = space
indent_size 3

[*.{sh,bat}]
indent_size = 2
